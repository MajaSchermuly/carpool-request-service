<%= form_with(model: driver) do |form| %>
  
  <div class=field>
    <h1 class="centered"><%= form.label :driver_status, "What is your status?" %></h1>
    <%= form.select :driver_status, ['On-Route to Pick-up Location', 'On-Route to Drop-off Location', 'Picked up rider', 'Dropped Off Rider', 'Other'] %>

    <br><br>

    <h3 class="centered">
      If you selected "Other",give a brief description below.
    </h3>
    <%= form.text_field :driver_status %>
  </div>
  
  <br><br>

  <div class="actions">
    <%= form.submit class: "green button" %>
  </div>
<% end %>
