<p id="notice"><%= notice %></p>

<%= link_to "Home Page", root_path %> |
<%= link_to "Queue Page", assignments_path %>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
	  <th>Id</th>
      <th>Rider</th>
	  <th>Status</th>
      <th>Time</th>
      <th>Pick Up Location</th>
      <th>Drop Off Location</th>
      <th>Num of Passengers</th>
      <th>Additional Info</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.where.not(request_status: 'Cancelled').order('request_id ASC').each do |request| %>
      <tr>
	    <td><%= request.request_id %></td>
        <td><%= request.rider_id %></td>
		<td><%= request.request_status %></td>
        <td><%= request.date_time %></td>
        <td><%= request.pick_up_loc %></td>
        <td><%= request.drop_off_loc %></td>
        <td><%= request.num_passengers %></td>
        <td><%= request.additional_info %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
		<td><%= link_to 'Cancel', request_cancel_path(request), data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
	<% end %>
	  
	<% @requests.where(request_status: 'Cancelled').order('request_id ASC').each do |request| %>
      <tr>
	    <td><%= request.request_id %></td>
        <td><%= request.rider_id %></td>
		<td><%= request.request_status %></td>
        <td><%= request.date_time %></td>
        <td><%= request.pick_up_loc %></td>
        <td><%= request.drop_off_loc %></td>
        <td><%= request.num_passengers %></td>
        <td><%= request.additional_info %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

