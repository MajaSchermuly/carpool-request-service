    <%= form.label :num_passengers %>
    <%= form.text_field :num_passengers %>
  </div>

  <div class="field">
    <%= form.label :attire %>
    <%= form.text_field :attire %>
  </div>

  <div class="field">
    <%= form.label :additional_info %>
