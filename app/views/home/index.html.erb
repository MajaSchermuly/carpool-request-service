

<div class="card" id="home-card">
    <h1>CARPOOL HOME</h1>

    <!--Temporary Login and Logout -->
    <% if current_member %>
        <h2><%= current_member.email %></h2>
        <%= link_to "Assigned Rider", member_rider_info_path %>
        %= link_to "Edit Account", edit_member_registration_path %>
        <%= button_to "Logout", destroy_member_session_path, data: {turbo: "false"}, method: :delete %>
    <% else %>
        <%= link_to "Login", new_member_session_path %>
        <%= link_to "Create Account", new_member_registration_path %>
            <p>
                Click the link below to submit a new ride request
            </p>

        <%= link_to 'New Request', new_request_path %>
    <% end %>
</div>

