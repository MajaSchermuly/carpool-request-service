<%= form_tag(search_path, method: :get) do %>
  <div class=" horiz-container">
    <p class="small-text">
      Already requested a ride? <br>
      Check the status here. <br><br>

      <em>
        Note: Enter your ride information exactly<br>
        as it was when you requested your ride.
      </em>
    </p>

    <br>

  
    <div class="vert-container">
      <div class="field">
        <%= label_tag "Enter your name:" %>
        <%= text_field_tag(:search_name, params[:search_name]) %>
      </div>
        
      <div class="field">
        <%= label_tag "Enter your phone number:" %>
        <%= text_field_tag(:search_phone_number, params[:search_phone_number]) %>
      </div>
    </div>

  </div>
		
  <%= submit_tag 'Check Ride Status', class: "green wide button small-margins" %>
<% end %>