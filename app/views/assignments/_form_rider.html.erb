<%= form_tag(search_path, method: :get) do %>
  <div class=" horiz-container">
    <p class="small-text">
      <b class="green-text large-text">
        Check the status of <br>
        your ride here!
      </b>
      
      <br><br>
      Enter your ride information exactly<br>
      as it was when you requested your ride. <br><br>
      <em>
        If nothing appears, double-check that the name<br>
        and phone number were inputted correctly
      </em>
    </p>

    <br>

  
    <div class="vert-container">
      <div class="field">
        <%= label_tag "Enter your name:" %>
        <%= text_field_tag(:search_name, params[:search_name], maxlength: 300) %>
      </div>
        
      <div class="field">
        <%= label_tag "Enter your phone number:" %>
        <%= text_field_tag(:search_phone_number, params[:search_phone_number], maxlength: 300, class: 'phone-number') %>
      </div>
    </div>

  </div>
		
  <%= submit_tag 'Check Ride Status', class: "green wide button small-margins" %>
<% end %>