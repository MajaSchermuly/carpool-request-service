<h1>Editing Assignment</h1>

<%= form_with(model: @assignment) do |form| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
        <% @assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :request_id %>
    <%= form.select :request_id, Request.where(request_status: 'Unassigned').or(Request.where(request_id: @assignment.request_id)).map { |request| [request.request_id] }, include_blank: true, id:"id_of_the_request_id_select_box" %>
  </div>

  <div class="field">
    <%= form.label :driver_id %>
    <%= form.text_field :driver_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Show', @assignment %> |
