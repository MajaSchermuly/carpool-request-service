<p id="notice"><%= notice %></p>

<div class="horiz-container">
  <%= link_to "Requests", requests_path, :class => "grey button small-margins" %>
  <%= link_to "Assignments", assignments_path, :class => "grey button small-margins" %>
</div>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Queue Position</th>
	    <th> Request Status</th>
      <th>Request Id</th>
      <th>Driver Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queued_assignments.each do |assignment| %>
      <tr>
	      <td><%= assignment.queue_pos %></td>
        <td><%= Request.find_by(request_id: assignment.request_id).request_status %></td>
        <td><%= assignment.request_id %></td>
        <td><%= assignment.driver_id %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit Driver', edit_assignment_path(assignment) %></td>
		    <td><%= link_to 'Change Status', request_status_path(Request.where(request_id: assignment.request_id).last) %></td>
		    <td><%= link_to 'Picked Up', assignment_picked_up_path(assignment) %></td>
		    <td><%= link_to 'Dropped Off', assignment_dropped_off_path(assignment) %></td>
		    <td><%= link_to 'Driver Notes', assignment_notes_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
	
	<% @other_assignments.each do |assignment| %>
      <tr>
	      <td><%= assignment.queue_pos %></td>
        <td><%= Request.find_by(request_id: assignment.request_id).request_status %></td>
        <td><%= assignment.request_id %></td>
        <td><%= assignment.driver_id %></td>
        <td><%= link_to 'Show', assignment %></td>
		    <td><%= link_to 'Driver Notes', assignment_notes_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path, class: "green button small-margins" %>
