<h1 class="title">Login</h1>

<br>

<br><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="display: flex; flex-direction: row;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => "no-margins" %>
    </div>
  <% end %>

  <br>

  <div class="horiz-container">
    <div class="actions">
      <%= f.submit "LOGIN", :class => "green button" %>
    </div>

    

    
  </div>

<% end %>

<%= render "devise/shared/links" %>